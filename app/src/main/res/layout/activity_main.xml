<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="15sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/local_music"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="本地音乐"/>
        <RadioButton
            android:id="@+id/collection_music"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/heart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="收藏音乐"/>
        <RadioButton
            android:id="@+id/download_music"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的下载"/>
        <RadioButton
            android:id="@+id/music_history"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="播放历史"/>

    </LinearLayout>
    <TextView
        android:id="@+id/click_tosearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="#8000"
        android:textAlignment="center"
        android:text="点击搜索歌曲"/>
        <!--歌曲排行榜-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical">
        <GridView
            android:layout_marginTop="5dp"
            android:id="@+id/Leader_board"
            android:layout_width="wrap_content"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="3dp"
            android:gravity="center_horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:text="----歌单列表-----"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        <GridView
            android:layout_margin="5dp"
            android:id="@+id/radiolist"
            android:layout_width="wrap_content"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="3dp"
            android:gravity="center_horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/music_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:roundAsCircle="true"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:id="@+id/music_next"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/pause"
            android:src="@mipmap/pause"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/music_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>